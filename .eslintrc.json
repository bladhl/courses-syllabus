{
    "env": {
        "browser": true,
        "es2021": true,
				"jest": true
				// "jasmine": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
				"plugin:jsx-a11y/recommended",
				"plugin:react-hooks/recommended",
				"prettier"


    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
				"react-hooks",
				"prettier"
    ],
    "rules": {
			"prettier/prettier": [
				"error",
				{
					"endOfLine": "auto"
				}
			],
			"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
			"react/function-component-definition": [
				2,
				{
					"namedComponents": "function-declaration"
				}
			]
    }
}
